#!/bin/bash

OUT_DIR=build

rm -rf ${OUT_DIR}
mkdir -p ${OUT_DIR}

yarn esbuild src/script/perft.ts \
  --bundle \
  --platform=node \
  --format=esm \
  > ${OUT_DIR}/perft.mjs

